{
  "prettier.eslintIntegration": true,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",

  "languageserver": {
    "haskell": {
      "command": "haskell-language-server",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  }
}
